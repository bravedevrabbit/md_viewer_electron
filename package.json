{
  "name": "mdview",
  "version": "1.2.0",
  "description": "Standalone Markdown Viewer",
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/c3er/mdview.git"
  },
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "shortcutName": "Markdown Viewer"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/md.ico"
    },
    "fileAssociations": [
      {
        "name": "Markdown file",
        "ext": ".md",
        "icon": "icon/md.ico"
      },
      {
        "name": "Markdown file",
        "ext": ".markdown",
        "icon": "icon/md.ico"
      }
    ]
  },
  "dependencies": {
    "github-markdown-css": "~2.10.0",
    "highlight.js": "~9.13.1",
    "markdown-it": "~8.4.2",
    "markdown-it-headinganchor": "~1.3.0"
  },
  "devDependencies": {
    "electron": "~3.0.13",
    "electron-builder": "~20.38.4"
  }
}
