{
  "name": "mdview",
  "version": "1.0.1",
  "description": "Standalone Markdown viewer",
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "shortcutName": "Markdown Viewer"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/md.ico"
    },
    "fileAssociations": {
      "ext": [
        ".md",
        ".markdown"
      ],
      "name": "Markdown file",
      "icon": "icon/md.ico"
    }
  },
  "dependencies": {
    "github-markdown-css": "~2.10.0",
    "highlight.js": "~9.12.0",
    "markdown-it": "~8.4.1",
    "markdown-it-headinganchor": "~1.3.0"
  },
  "devDependencies": {
    "electron": "~1.8.4",
    "electron-builder": "~20.13.3"
  }
}
