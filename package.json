{
  "name": "mdview",
  "version": "1.4.5",
  "description": "Standalone Markdown Viewer",
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/c3er/mdview.git"
  },
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder",
    "test": "mocha --timeout 20000"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "shortcutName": "Markdown Viewer"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/md.ico"
    },
    "fileAssociations": [
      {
        "name": "Markdown file",
        "ext": ".md",
        "icon": "icon/md.ico"
      },
      {
        "name": "Markdown file",
        "ext": ".markdown",
        "icon": "icon/md.ico"
      }
    ]
  },
  "dependencies": {
    "github-markdown-css": "4.0.0",
    "highlight.js": "10.5.0",
    "iconv-lite": "0.6.2",
    "markdown-it": "12.0.4",
    "markdown-it-headinganchor": "1.3.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "electron": "11.1.1",
    "electron-builder": "22.9.1",
    "mocha": "8.2.1",
    "prettier": "2.2.1",
    "spectron": "13.0.0"
  }
}
