{
  "name": "mdview",
  "version": "0.0.1",
  "description": "Standalone Markdown viewer",
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS"
    }
  },
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.13.3",
    "github-markdown-css": "^2.10.0",
    "highlight.js": "^9.12.0",
    "markdown-it": "^8.4.1"
  }
}
